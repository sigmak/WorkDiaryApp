<Window x:Class="WorkDiaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WorkDiaryApp.ViewModel" 
        xmlns:conv="clr-namespace:WorkDiaryApp.Utility.Converters" 
        Title="업무 및 팁 관리 툴" Height="750" Width="1000"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Window.Resources>

    <Grid>
        <TabControl>
            
            <TabItem Header="업무 일지" Name="WorkDiaryTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="*"/> 
                        <RowDefinition Height="250"/> 
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#F0F0F0">
                        <Label Content="날짜 선택:"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" Margin="5,5" Width="120"/>
                        
                        <Label Content="제목/내용 검색:"/>
                        <TextBox Width="200" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                        
                        <Button Content="검색" Command="{Binding SearchCommand}" Margin="10,5"/>
                        <Button Content="새로 작성" Command="{Binding NewCommand}" Margin="20,5,0,5"/>
                        <Button Content="삭제" Command="{Binding DeleteCommand}" Margin="10,5" Foreground="Red"/>
                        <Button Content="저장" Command="{Binding SaveCommand}" Margin="10,5,0,5" FontWeight="Bold"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/> 
                            <ColumnDefinition Width="1.5*"/> 
                        </Grid.ColumnDefinitions>
                        
                        <!-- 왼쪽 상세 정보 영역 -->
                        <Grid Grid.Column="0" Margin="0,0,10,0" DataContext="{Binding SelectedItem}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="60"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 제목 -->
                            <Label Grid.Row="0" Grid.Column="0" Content="제목:"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                            
                            <!-- 업체명, 작성일, 담당자 -->
                            <Label Grid.Row="1" Grid.Column="0" Content="업체명:"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                <TextBox Text="{Binding CompanyName}" Width="150" Margin="0,0,20,0"/>
                                <Label Content="작성일:"/>
                                <TextBlock Text="{Binding WriteDate, StringFormat='yyyy-MM-dd'}" VerticalAlignment="Center" Margin="5,0,20,0"/>
                                <Label Content="담당자:"/>
                                <TextBox Text="{Binding Writer}" Width="150" Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <!-- 내용 -->
                            <Label Grid.Row="2" Grid.Column="0" Content="내용:"/>
                            <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                     Text="{Binding Content}" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,5"/>
                            
                            <!-- 비고 -->
                            <Label Grid.Row="4" Grid.Column="0" Content="비고:"/>
                            <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                                     Text="{Binding Memo}" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,5"/>
                        </Grid>
                        
                        <!-- 오른쪽 첨부 파일 영역 -->
                        <StackPanel Grid.Column="1" DataContext="{Binding SelectedItem}">
                            <Label Content="첨부 파일:"/>
                            <ListBox ItemsSource="{Binding Attachments}" 
                                     SelectedItem="{Binding SelectedAttachment}"
                                     DisplayMemberPath="FileName"
                                     Height="100" Margin="0,5"/>
                            
                            <Button Content="파일 추가" 
                                    Command="{Binding DataContext.AttachFileCommand, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=2}}" 
                                    Margin="0,5"/>
                            
                            <Label Content="이미지 미리보기:"/>
                            <Image Source="{Binding SelectedAttachment.FileData, Converter={StaticResource ByteArrayToImageConverter}}" 
                                   Height="150" Margin="0,5" Stretch="Uniform"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 하단 목록 -->
                    <DataGrid Grid.Row="2" Margin="10" 
                              ItemsSource="{Binding ItemList}" 
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              RowHeaderWidth="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="고유키" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="제목" Binding="{Binding Title}" Width="2*"/>
                            <DataGridTextColumn Header="업체명" Binding="{Binding CompanyName}" Width="1.5*"/>
                            <DataGridTextColumn Header="작성일" Binding="{Binding WriteDate, StringFormat='yyyy-MM-dd'}" Width="100"/>
                            <DataGridTextColumn Header="첨부수" Binding="{Binding AttachmentCount}" Width="80"/>
                            <DataGridTextColumn Header="담당자" Binding="{Binding Writer}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="프로그래밍 팁" x:Name="ProgrammingTipTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="*"/> 
                        <RowDefinition Height="250"/> 
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#F0F0F0">
                        <Label Content="날짜 선택:"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" Margin="5,5" Width="120"/>
                        
                        <Label Content="제목/내용 검색:"/>
                        <TextBox Width="200" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                        
                        <Button Content="검색" Command="{Binding SearchCommand}" Margin="10,5"/>
                        <Button Content="새로 작성" Command="{Binding NewCommand}" Margin="20,5,0,5"/>
                        <Button Content="삭제" Command="{Binding DeleteCommand}" Margin="10,5" Foreground="Red"/>
                        <Button Content="저장" Command="{Binding SaveCommand}" Margin="10,5,0,5" FontWeight="Bold"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/> 
                            <ColumnDefinition Width="1.5*"/> 
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0" Margin="0,0,10,0" DataContext="{Binding SelectedItem}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="60"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="제목:"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Content="카테고리:"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                <TextBox Text="{Binding CompanyName}" Width="150" Margin="0,0,20,0"/>
                                <Label Content="작성일:"/>
                                <TextBlock Text="{Binding WriteDate, StringFormat='yyyy-MM-dd'}" VerticalAlignment="Center" Margin="5,0,20,0"/>
                                <Label Content="작성자:"/>
                                <TextBox Text="{Binding Writer}" Width="150" Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <Label Grid.Row="2" Grid.Column="0" Content="내용:"/>
                            <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                     Text="{Binding Content}" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,5"/>
                            
                            <Label Grid.Row="4" Grid.Column="0" Content="비고:"/>
                            <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                                     Text="{Binding Memo}" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,5"/>
                        </Grid>
                        
                        <StackPanel Grid.Column="1" DataContext="{Binding SelectedItem}">
                            <Label Content="첨부 파일:"/>
                            <ListBox ItemsSource="{Binding Attachments}" 
                                     SelectedItem="{Binding SelectedAttachment}"
                                     DisplayMemberPath="FileName"
                                     Height="100" Margin="0,5"/>
                            
                            <Button Content="파일 추가" 
                                    Command="{Binding DataContext.AttachFileCommand, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=2}}" 
                                    Margin="0,5"/>
                            
                            <Label Content="이미지 미리보기:"/>
                            <Image Source="{Binding SelectedAttachment.FileData, Converter={StaticResource ByteArrayToImageConverter}}" 
                                   Height="150" Margin="0,5" Stretch="Uniform"/>
                        </StackPanel>
                    </Grid>
                    
                    <DataGrid Grid.Row="2" Margin="10" 
                              ItemsSource="{Binding ItemList}" 
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              RowHeaderWidth="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="고유키" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="제목" Binding="{Binding Title}" Width="2*"/>
                            <DataGridTextColumn Header="카테고리" Binding="{Binding CompanyName}" Width="1.5*"/>
                            <DataGridTextColumn Header="작성일" Binding="{Binding WriteDate, StringFormat='yyyy-MM-dd'}" Width="100"/>
                            <DataGridTextColumn Header="첨부수" Binding="{Binding AttachmentCount}" Width="80"/>
                            <DataGridTextColumn Header="작성자" Binding="{Binding Writer}" Width="100"/>
                    	</DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>